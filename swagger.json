        "brief": {
          "type": "string"
        },
        "prep": {
          "type": "string"
        },
        "synthesis": {
          "type": "string"
        },
        "revisionLog": {
          "type": "string"
        },
        "openQuestion": {
          "type": "string"
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Question"
          }
        }
      },
      "xml": {
        "name": "Brick"
      }
